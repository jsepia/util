{
  "name": "@jsepia/utils",
  "version": "1.0.0",
  "description": "My utility library. Because some wheels are worth reinventing.",
  "main": "dist/jsepia-util.umd.js",
  "module": "dist/jsepia-util.es2015.js",
  "scripts": {
    "build": "npm run lint && rollup -c rollup.conf.js",
    "clean": "rimraf dist/*",
    "lint": "eslint src/**/*.js test/**/*.js",
    "test": "cross-env NODE_ENV=test nyc mocha test/**/*.test.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsepia/util.git"
  },
  "author": "Julio Sepia",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jsepia/util/issues"
  },
  "homepage": "https://github.com/jsepia/util#readme",
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.1",
    "chai-subset": "^1.5.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.0",
    "eslint": "^3.19.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
