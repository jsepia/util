{
  "name": "@jsepia/utils",
  "version": "1.1.0",
  "description": "My utility library. Because some wheels are worth reinventing.",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/jsepia-utils.umd.js",
  "module": "lib/index.js",
  "scripts": {
    "build": "npm run lint && npm run build:lib && npm run build:docs",
    "build:lib": "rollup -c rollup.conf.js",
    "build:docs": "jsdoc -c jsdoc.conf.json",
    "clean": "rimraf dist/*",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint src/**/*.js test/**/*.js",
    "test": "npm run lint && cross-env NODE_ENV=test nyc mocha test/**/*.test.js",
    "watch": "watch -p \"lib/**/*.js\" -c \"npm test\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsepia/utils.git"
  },
  "author": "Julio Sepia",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jsepia/utils/issues"
  },
  "homepage": "https://github.com/jsepia/utils#readme",
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.1",
    "chai-subset": "^1.5.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.0",
    "eslint": "^3.19.0",
    "eslint-config-jsepia": "^1.0.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "watch-cli": "^0.2.2"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
